  GA_SPCL311  => delete    // ranger charm
  GA_SPCL412  => delete    // set snare
  AP_DW-FTTRP => delete    // traps bonus
  AP_DW-FTEMP => delete    // caster bonus
  AP_DW-FTEPG => delete    // caster bonus
