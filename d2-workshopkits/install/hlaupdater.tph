  d2moonlightknightcr => fighter
  d2confessor         => fighter
  d2templeknight      => fighter
  d2noblescion        => fighter
END

ACTION_DEFINE_ASSOCIATIVE_ARRAY d2wk_restricthlas BEGIN    // abilities to skip (can be a list)
  d2medic             => ~GA_SPCL904 AP_DW-FTMTY AP_DW-FTDDL AP_DW-GCRY AP_MO#HLA07 AP_MO#HLA08~
  d2drifter           => ~AP_DW-GCRY GA_SPCL909~
  d2warmagician       => none
  d2starjammer        => none
  d2gravewarden       => ~AP_DW-FTMTY AP_DW-FTDDL AP_DW-GCRY GA_SPCL909 AP_MO#HLA07 AP_MO#HLA08~
  d2moonlightknight   => ~AP_DW-FTMTY AP_DW-FTDDL AP_DW-GCRY GA_SPCL909 AP_MO#HLA07 AP_MO#HLA08~
  d2moonlightknightcr => ~AP_DW-FTMTY AP_DW-FTDDL AP_DW-GCRY GA_SPCL909 AP_MO#HLA07 AP_MO#HLA08~
  d2confessor         => ~AP_DW-FTMTY AP_DW-FTDDL GA_SPCL901 AP_SPCL901 AP_MO#HLA07 AP_MO#HLA08 AP_DW-FTFOP~
  d2templeknight      => ~AP_DW-FTDDL AP_DW-FTDIR GA_SPCL901 AP_SPCL901 AP_MO#HLA07 AP_MO#HLA08 AP_DW-FTFOP~
