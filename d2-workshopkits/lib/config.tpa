  COUNT_REGEXP_INSTANCES  ~Warhound[^A-Z].*=.*[^0-9]0[^0-9]*$~                nowarhound
  COUNT_REGEXP_INSTANCES  ~GraveWarden[^A-Z].*=.*[^0-9]0[^0-9]*$~             nogravewarden
  COUNT_REGEXP_INSTANCES  ~MoonlightKnight[^A-Z].*=.*[^0-9]0[^0-9]*$~         nomoonlightknight
  COUNT_REGEXP_INSTANCES  ~Confessor[^A-Z].*=.*[^0-9]0[^0-9]*$~               noconfessor
  COUNT_REGEXP_INSTANCES  ~TempleKnight[^A-Z].*=.*[^0-9]0[^0-9]*$~            notempleknight
  COUNT_REGEXP_INSTANCES  ~WarMagician[^A-Z].*=.*[^0-9]0[^0-9]*$~             nowarmagician
  COUNT_REGEXP_INSTANCES  ~Starjammer[^A-Z].*=.*[^0-9]0[^0-9]*$~              nostarjammer
  COUNT_REGEXP_INSTANCES  ~BloodMinister[^A-Z].*=.*[^0-9]0[^0-9]*$~           nobloodminister
